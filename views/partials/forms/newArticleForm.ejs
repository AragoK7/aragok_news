<div>
  <form
    action="posts"
    method="POST"
    enctype="application/x-www-form-urlencoded"
  >
    <label for="title">
      <input required type="text" name="title" placeholder="Title" />
    </label>

    <label for="content">
      <textarea
        required
        name="content"
        cols="100"
        rows="5"
        placeholder="News Content..."
      ></textarea>
    </label>

    <button type="submit">Add article</button>
  </form>
</div>
